{
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "typeRoots": ["./node_modules/@types", "./@types"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["jest", "node"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src",
    "babel.config.js",
    "jest.config.js",
    "jest.setup.js",
    "tailwind.config.ts",
    "src/FireBase/FireBaseConfig.tsx",
    "src/types/**/*.d.ts",
    "global.d.ts"
  ],
  "exclude": ["node_modules"]
}
